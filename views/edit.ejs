<%- include("partials/header") %>
<div class="ui main text container segment new">
	<div class="ui huge header">Edit <%=blog.title%></div>
	<form action="/blogs/<%=blog._id%>?_method=PUT" class="ui form"method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%=blog.title%>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Description</label>
			<textarea name="blog[description]"><%=blog.description%></textarea>
		</div>
		<div class="field">
			<button class="positive fluid ui button">Submit</button>
		</div>
	</form>
</div>

	
<%- include("partials/footer") %>